<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
      title="Payments Due">
      <List headerText="{Payments}" id="overviewList" items="{/paymentsData}" noDataText="{i18n>noDataText}">
		<items>
			<ObjectListItem 
				title="{UtilityType}"
				type="Active"
				press="onListItemPress">
				<firstStatus>
					<ObjectStatus
						text="{Payments}"
						state="{
							path: 'Payments',
							formatter: 'sap.ui.utegation.Formatter.Formatter.status'
						}" />
				</firstStatus>
				<attributes>
					<ObjectAttribute text="{Description}"/>
				</attributes>
			</ObjectListItem>
		</items>
	</List>
      <beginButton>
         <Button
            text="{i18n>dialogCloseButtonText}"
            press="onClosePaymentsDialog"/>
      </beginButton>
   </Dialog>
</core:FragmentDefinition>
