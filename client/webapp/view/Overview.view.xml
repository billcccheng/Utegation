<core:View controllerName="sap.ui.utegation.controller.Preference"
	xmlns:core="sap.ui.core" 
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout">

	<List headerText="{i18n>OverviewText}" id="overviewList" items="{/paymentsData}" noDataText="{i18n>noDataText}">
		<items>
			<ObjectListItem 
				title="{UtilityType}"
				type="Active"
				press="onListItemPress">
				<firstStatus>
					<ObjectStatus
						text="{Payments}"
						state="{
							path: 'Payments',
							formatter: 'sap.ui.utegation.Formatter.Formatter.status'
						}" />
				</firstStatus>
				<attributes>
					<ObjectAttribute text="{Description}"/>
				</attributes>
			</ObjectListItem>
		</items>
	</List>
	<!--<Button press="onPressFilter" text="Test"></Button>-->
</core:View>